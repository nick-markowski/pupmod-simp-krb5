[realms]
  <%= @name.upcase %> = {
    admin_server = <%= @admin_server %>
<% if @kdc -%>
    kdc = <%= @kdc %>
<% else -%>
    kdc = <%= @admin_server %>
<% end -%>
<% if @default_domain -%>
    default_domain = <%= @default_domain %>
<% end -%>
<% if @v4_realm -%>
    v4_realm = <%= @v4_realm %>
<% end -%>
<% if @auth_to_local -%>
    auth_to_local = <%= @auth_to_local %>
<% end -%>
<% if !@v4_instance_convert.empty? -%>
    v4_instance_convert = {
<%  @v4_instance_convert.each_pair do |key, val| -%>
      <%= key %> = <%= val %>
<%  end -%>
    }
<% end -%>
<% if !@auth_to_local_names.empty? -%>
    auth_to_local_names = {
<%  @auth_to_local_names.each_pair do |key, val| -%>
      <%= key %> = <%= val %>
<%  end -%>
    }
<% end -%>
  }
